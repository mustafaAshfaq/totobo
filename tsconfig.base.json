{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@totobo/shared": ["libs/shared/src/index.ts"],
      "@totobo/config": ["libs/config/src/index.ts"],
      "@totobo/test": ["libs/test/src/index.ts"],
      "@totobo/layout": ["libs/layout/src/index.ts"],
      "@totobo/core": ["libs/core/src/index.ts"],
      "@totobo/auth": ["libs/auth/src/index.ts"],
      "@totobo/home": ["libs/home/src/index.ts"],
      "@totobo/product": ["libs/product/src/index.ts"],
      "@totobo/bets": ["libs/bets/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
